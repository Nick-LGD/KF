{% extends 'base_admin.html.twig' %}

{% block title %}Envoi de message{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container text-center">
            <h1>Message de {{ contact.name }}</h1>
            <p><strong>Sujet:</strong> {{ contact.subject }}</p>
            <p><strong>Reçu le:</strong> {{ contact.createdAt|date('d/m/Y à h:i')}}</p>
            <p><strong>Message:</strong> {{ contact.message }}</p>
        </div>
        <div class="row justify-content-center">
            <div class="container text-center">
                <hr class="cm-hr">
                <h1>Répondre</h1>
                {{ form_start(form) }}
                <div>
                    {{ form_row(form.name, {'label': 'Auteur'}) }}
                </div>
                <div>
                    {{ form_row(form.message, {'label': 'Message'}) }}
                </div>

                <button class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
