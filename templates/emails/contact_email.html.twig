{% extends 'base_email.html.twig' %}

{% block body %}
    <row class="message">
        <columns>
            <spacer size="35"></spacer>
            <h2>
                <center>
                    Réponse à votre message
                </center>
            </h2>
            <spacer size="20"></spacer>
        </columns>
    </row>
    <row>
        <columns>
            <p>
                {{ contact.message }} <br><br>  Bien à vous, <br> {{ contact.name }}
            </p>
        </columns>
    </row>
    <hr>
    <row>
        <columns>
            <p>
                N'hésitez pas à revenir vers nous si notre réponse n'a pas été claire.
            </p>
        </columns>
    </row>
    <row>
        <columns>
            <center>
                <button href="{{ url('home') }}">Accueil</button>
            </center>
        </columns>
    </row>
{% endblock %}
